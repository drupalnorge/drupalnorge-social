{
    "name": "goalgorilla/social_template",
    "description": "Social project template for composer based Open Social projects.",
    "type": "project",
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=7.4",
        "drupal/coffee": "^1.0",
        "drupal/config_ignore": "^2.1",
        "drupal/core-composer-scaffold": "~8.9.20",
        "drupal/core-recommended": "~8.9.20",
        "drupal/google_analytics": "^3.1",
        "drupal/honeypot": "^2.0",
        "drupal/recaptcha": "^3.0",
        "drupal/reroute_email": "^2.0",
        "drupal/slack": "^1.2",
        "drupal/slack_invite": "^2.0",
        "drupal/social_search_autocomplete": "^1.2",
        "drupal/sparkpost": "^2.0",
        "drush/drush": "^10.0.0",
        "goalgorilla/open_social": "10.2.11",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "behatch/contexts": "^3.3",
        "bex/behat-screenshot": "^2.1",
        "drupal/core-dev": "~8.9.20",
        "drupal/drupal-extension": "~3.0",
        "drupal/stage_file_proxy": "^1.0",
        "eiriksm/wait-for-listen": "^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "oomphinc/composer-installers-extender": true,
            "zaporylie/composer-drupal-optimizations": true
        }
    },
    "autoload": {
        "psr-4": { "DrupalNorge\\DrupalNorgeSocial\\Tests\\": "tests/src" }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpcs -p",
            "./vendor/bin/behat --colors"
        ],
        "import": [
            "./vendor/bin/drush --root=$(pwd)/html cache:clear drush",
            "./vendor/bin/drush --root=$(pwd)/html config:import --yes"
        ],
        "export": [
            "./vendor/bin/drush --root=$(pwd)/html config:export --yes"
        ],
        "build": [
            "git pull",
            "@composer install --optimize-autoloader --no-dev",
            "./vendor/bin/drush --root=$(pwd)/html updatedb --yes",
            "@composer import",
            "./vendor/bin/drush --root=$(pwd)/html cache:rebuild",
            "./vendor/bin/drush --root=$(pwd)/html deploy:hook --yes"
        ],
        "dl-db": [
            "./vendor/bin/drush sql:drop --yes",
            "wget --no-check-certificate https://drupalnorge.no/sanitized.db",
            "./vendor/bin/drush sql:cli < ./sanitized.db",
            "rm ./sanitized.db",
            "./vendor/bin/drush cache:rebuild",
            "./vendor/bin/drush user:login"
        ],
        "install-site": [
            "@composer install",
            "@composer up-db"
        ]
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "html/"
            }
        },
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "html/core": ["drupal/core"],
            "html/modules/contrib/{$name}": ["type:drupal-module"],
            "html/profiles/contrib/social": ["goalgorilla/open_social"],
            "html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"],
            "html/libraries/{$name}": ["type:drupal-library", "type:bower-asset", "type:npm-asset"]
        },
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches": {
            "drupal/core": {
                "Keep setting.php intact, add local config to settings.local.php": "https://github.com/zaporylie/drupal/commit/6f0b4e95f28ae945c6fa2bf0e5e81850d3e695f8.patch",
                "Post update hook naming convention patch": "https://git.drupalcode.org/project/drupal/-/merge_requests/1215.patch"
            }
        }
    }
}
